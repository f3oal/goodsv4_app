<h1>Create record</h1>
<br />
<div class="row">
  <div align="center" class="span6 offset3">
    <%= form_for(@good) do |f| %>
     <%= render 'shared/error_messages' %>
      
	    <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :price %>
      <%= f.text_field :price %>

    

      <%= f.label :category_id %>
      <%= f.select :category_id, options_for_select(Category.all.collect { |category| [category.name, category.id] }), {:multiple=>true, :size=>5} %>
      <br/>
      <%= f.submit "Create", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>